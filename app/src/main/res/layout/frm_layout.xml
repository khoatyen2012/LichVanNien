<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@android:color/holo_red_light"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/ibToDay"

                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/homnay"
                android:onClick="OnClick_HomNay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTitleVanNien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ibToDay"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"

                android:text="Tân Á Đại Thành"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold"
               />


        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:background="@drawable/img_2"
            android:layout_height="0dp">

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/tvMonthYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Tháng 1 năm 2016"
                android:textColor="@android:color/holo_red_light"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/tvDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="18"
                android:textColor="@android:color/holo_red_light"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="130dp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvThuMay"
                android:fontFamily="sans-serif"
              android:layout_below="@+id/tvDay"
                android:textColor="@android:color/holo_red_light"
android:layout_centerHorizontal="true"
                android:textAlignment="center"

                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Thứ ?"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCadao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Công cha như núi Thái Sơn
Nghĩa mẹ như nước trong nguồn chảy ra"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14dp"
                android:textColor="@android:color/black"
          android:layout_above="@+id/tvAuthor"
                android:textStyle="italic" />

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:fontFamily="sans-serif"
                android:text="Duong Van Khoat"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="12dp"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:textStyle="normal" />

        </RelativeLayout>

        <LinearLayout
            android:background="#BBBBBB"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_marginRight="1dp"
                   android:layout_height="match_parent">

                   <RelativeLayout
                       android:background="#e1e1e1"
                       android:layout_weight="1"
                       android:layout_marginBottom="1dp"
                       android:layout_width="match_parent"
                       android:layout_height="0dp">

                       <ImageView
                           android:id="@+id/ivChamDo"
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:background="@drawable/trondo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:textColor="#5f4d3f"
                           android:layout_marginLeft="20dp"
                           android:textSize="25dp"
                           android:layout_toRightOf="@+id/ivChamDo"
                           android:layout_centerVertical="true"
                           android:text="Giờ"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />

                   </RelativeLayout>
                   <RelativeLayout
                       android:background="#f7f7f7"
                       android:layout_weight="3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp">

                       <TextView
                           android:layout_marginTop="2dp"
                           android:textSize="30dp"
                           android:id="@+id/tvGio"
                           android:textColor="@android:color/black"
                           android:layout_width="wrap_content"
                           android:layout_centerHorizontal="true"
                           android:text="20:58"
                           android:textAlignment="center"
                           android:textAllCaps="true"
                           android:fontFamily="sans-serif"
                           android:textStyle="normal|bold"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:layout_below="@+id/tvGio"
                           android:layout_marginTop="2dp"
                           android:textSize="15dp"
                           android:id="@+id/tvSangChieu"
                           android:textColor="#5f4d3f"
                           android:layout_width="wrap_content"
                           android:layout_centerHorizontal="true"
                           android:text="Giờ Chiều"
                           android:textStyle="normal"
                           android:layout_height="wrap_content" />

                   </RelativeLayout>
               </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="1dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:background="#e1e1e1"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/ivChamNau"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/tronnau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#5f4d3f"
                        android:layout_marginLeft="20dp"
                        android:textSize="25dp"
                        android:layout_toRightOf="@+id/ivChamNau"
                        android:layout_centerVertical="true"
                        android:text="Ngày"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:background="#f7f7f7"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="50dp"
                        android:id="@+id/tvNgayAm"
                        android:textColor="@android:color/holo_red_light"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="30"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal|bold"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:background="#e1e1e1"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:textColor="#5f4d3f"
                        android:layout_marginLeft="20dp"
                        android:textSize="25dp"

                        android:layout_centerInParent="true"
                        android:text="Tháng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:background="#f7f7f7"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="25dp"
                        android:id="@+id/tvThangAm"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="12/2017"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal|bold"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>
