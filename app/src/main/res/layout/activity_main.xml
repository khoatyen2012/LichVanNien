<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tana.daithanh.lichvannien.MainActivity">



    <ViewFlipper
        android:id="@+id/viewFliper"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        >


        <include
            android:id="@+id/lnOu1"
            layout="@layout/lichngay_layout" />

        <include
            android:id="@+id/lnOu2"
            layout="@layout/lichthang_layout" />

        <include
            android:id="@+id/lnOu3"
            layout="@layout/doingay_layout" />

        <include
            android:id="@+id/lnOu4"
            layout="@layout/about_layout"
            />
        <include
            android:id="@+id/lnOu5"
            layout="@layout/view_ads"
            />

    </ViewFlipper>




    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/white_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
