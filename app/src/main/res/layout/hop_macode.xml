<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/nennang"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tvCode"
   android:layout_above="@id/etCode"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Nhập mã code để tiếp tục ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText

        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/etCode"
        android:hint="Code"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvThongBao"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etCode"
        android:text="Cần có kết nối mạng để tiếp tục"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btContinute"
        android:text="Tiếp Tục"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="onClickCode"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tvThongBao"
        android:layout_width="wrap_content"
        android:background="@drawable/answer_panel_true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btBack"
        android:text="Quay Lại"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="onClickQuayLai"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/btContinute"
        android:layout_width="wrap_content"
        android:background="@drawable/answer_panel_true"
        android:layout_height="wrap_content" />

</RelativeLayout>
